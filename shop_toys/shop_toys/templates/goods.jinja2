{% extends "base.jinja2" %}
			{% block data %}
	            {% if username != none %}
	            	<br>
		            <form action="addGoods.html" method="GET">
		            	<div class="col-md-10 col-xs-10 col-sm-10 col-xs-offset-1 col-sm-1 col-md-offset-1">
		            		<input type="submit" class="form-control" value="Добавить товар">
		            	</div>
		            </form>
		        {% endif %}
					

				{% for comment in comments %}
					<div class="comment col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-xs-offset-1 col-sm-offset-1">
						<p> 
							<span class="head">{{comment.creater}}</span><br>
						 	<span class="small">{{comment.date}}, {{comment.Login}}</span><br>
						 	<span class="comment">{{comment.text}}</span><br>
							[Производитель: <span class="comment">{{comment.manufacturer}}</span>]
						</p>
					</div>
				{% endfor %}
			{% endblock %}
